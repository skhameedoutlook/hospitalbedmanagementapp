<% if(session[:username] == nil or session[:usertype] == "admins") %>
<script type="text/javascript">
    window.location.href="/" 
</script>
<% else %>


<div class="container" style="text-align: center;">
<h2 style="padding-top: 100px;">Order ID: # <%= @request.id %></h3>
<hr>

<address>
<strong>Billed To:</strong><br>
	<%= @request.username %>
</address>
<address>
<strong>Payment Details:</strong><br>
Payment Method: Paid At Counter<br>
From: <%= Time.parse(@request.checkintime.to_s) %><br>
To: <%= Time.parse(@request.checkouttime.to_s) %><br>
Duration: <%=  @totaltime.round(2) %> Hours<br> 
Amount: $<%= (@totaltime*@cost*@request.quantity).round(2) %>
</address>
    <button class="app-button purple-only" style="border: none;" onclick="window.print();return false;">Print</button>
</div>

<% end %>